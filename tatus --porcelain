[32m+[m[32mimport { sanityClient } from "@/lib/sanity.client";[m
[32m+[m[32mimport { PRODUCT_BY_SLUG_QUERY } from "@/lib/sanity.queries";[m
[32m+[m[32mimport { urlFor } from "@/sanity/lib/image";[m
[32m+[m[32mimport LoadingSpinner from "@/components/LoadingSpinner";[m
[32m+[m
[32m+[m[32minterface ProductVariant {[m
[32m+[m	[32msku: string;[m
[32m+[m	[32msize: string;[m
[32m+[m	[32mcolor: string;[m
[32m+[m	[32mprice: number;[m
[32m+[m	[32mstock: number;[m
[32m+[m	[32mlimitedEdition: boolean;[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32minterface Product {[m
[32m+[m	[32m_id: string;[m
[32m+[m	[32mtitle: string;[m
[32m+[m	[32mdescription_IT?: string;[m
[32m+[m	[32mdescription_EN?: string;[m
[32m+[m	[32mslug: string;[m
[32m+[m	[32mtype: string;[m
[32m+[m	[32mprice?: number;[m
[32m+[m	[32msizes?: string[];[m
[32m+[m	[32misPreorder: boolean;[m
[32m+[m	[32mpreorderReleaseAt: string;[m
[32m+[m	[32mimages: any[];[m
[32m+[m	[32mvariants: ProductVariant[];[m
[32m+[m	[32mdrop?: {[m
[32m+[m		[32m_id: string;[m
[32m+[m		[32mtitle: string;[m
[32m+[m		[32mslug: string;[m
[32m+[m	[32m};[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mexport default function ProductPage() {[m
[32m+[m	[32mconst params = useParams();[m
[32m+[m	[32mconst slug = params.slug as string;[m
[32m+[m
[32m+[m	[32mconst [product, setProduct] = useState<Product | null>(null);[m
[32m+[m	[32mconst [loading, setLoading] = useState(true);[m
[32m+[m	[32mconst [error, setError] = useState<string | null>(null);[m
[32m+[m	[32mconst [selectedImage, setSelectedImage] = useState(0);[m
[32m+[m	[32mconst [selectedSize, setSelectedSize] = useState<string | null>(null);[m
[32m+[m	[32mconst [quantity, setQuantity] = useState<number>(1);[m
[32m+[m
[32m+[m	[32museEffect(() => {[m
[32m+[m		[32mconst fetchProduct = async () => {[m
[32m+[m			[32mtry {[m
[32m+[m				[32msetLoading(true);[m
[32m+[m				[32mconst data = await sanityClient.fetch(PRODUCT_BY_SLUG_QUERY, {[m
[32m+[m					[32mslug,[m
[32m+[m				[32m});[m
[32m+[m				[32msetProduct(data);[m
[32m+[m			[32m} catch (err) {[m
[32m+[m				[32mconsole.error("Error fetching product:", err);[m
[32m+[m				[32msetError("Failed to load product");[m
[32m+[m			[32m} finally {[m
[32m+[m				[32msetLoading(false);[m
[32m+[m			[32m}[m
[32m+[m		[32m};[m
[32m+[m
[32m+[m		[32mif (slug) {[m
[32m+[m			[32mfetchProduct();[m
[32m+[m		[32m}[m
[32m+[m	[32m}, [slug]);[m
[32m+[m
[32m+[m	[32m// Reset quantity when changing size[m
[32m+[m	[32museEffect(() => {[m
[32m+[m		[32msetQuantity(1);[m
[32m+[m	[32m}, [selectedSize]);[m
[32m+[m
[32m+[m	[32mif (loading) {[m
[32m+[m		[32mreturn ([m
[32m+[m			[32m<div className="min-h-[80dvh] grid place-items-center">[m
[32m+[m				[32m<div className="text-center">[m
[32m+[m					[32m<LoadingSpinner size="lg" />[m
[32m+[m					[32m<p className="text-gray-600 mt-4">Loading product...</p>[m
[32m+[m				[32m</div>[m
[32m+[m			[32m</div>[m
[32m+[m		[32m);[m
[32m+[m	[32m}[m
[32m+[m
[32m+[m	[32mif (error || !product) {[m
[32m+[m		[32mreturn ([m
[32m+[m			[32m<div className="min-h-[80dvh] grid place-items-center">[m
[32m+[m				[32m<div className="text-center text-red-600">[m
[32m+[m					[32m<p>{error || "Product not found"}</p>[m
[32m+[m				[32m</div>[m
[32m+[m			[32m</div>[m
[32m+[m		[32m);[m
[32m+[m	[32m}[m
[32m+[m
[32m+[m	[32mconst lowestPrice = product.variants?.reduce([m
[32m+[m		[32m(min, variant) => (variant.price < min ? variant.price : min),[m
[32m+[m		[32mproduct.variants[0]?.price || 0[m
[32m+[m	[32m);[m
[32m+[m
[32m+[m	[32mconst sizeOptions = Array.from([m
[32m+[m		[32mnew Set([m
[32m+[m			[32m(product.variants?.map((v) => v.size) || []).concat([m
[32m+[m				[32mproduct.sizes || [][m
[32m+[m			[32m)[m
[32m+[m		[32m)[m
[32m+[m	[32m);[m
[32m+[m
[32m+[m	[32mconst selectedVariant = selectedSize[m
[32m+[m		[32m? product.variants?.find((v) => v.size === selectedSize)[m
[32m+[m		[32m: undefined;[m
[32m+[m
[32m+[m	[32mconst displayPrice = (selectedVariant?.price ??[m
[32m+[m		[32mproduct.price ??[m
[32m+[m		[32mlowestPrice ??[m
[32m+[m		[32m0) as number;[m
[32m+[m
[32m+[m	[32m// Quantity is intentionally unlimited (no upper bound)[m
[32m+[m
[32m+[m	[32mreturn ([m
[32m+[m		[32m<div className="max-h-[80dvh] p-8">[m
[32m+[m			[32m<div className="mx-auto">[m
[32m+[m				[32m<motion.div[m
[32m+[m					[32minitial={{ opacity: 0, y: 20 }}[m
[32m+[m					[32manimate={{ opacity: 1, y: 0 }}[m
[32m+[m					[32mtransition={{ duration: 0.5 }}[m
[32m+[m					[32mclassName="grid grid-cols-1 lg:grid-cols-2 gap-12"[m
[32m+[m				[32m>[m
[32m+[m					[32m{/* Product Images */}[m
[32m+[m					[32m<div className="flex gap-4">[m
[32m+[m						[32m{product.images.length > 1 && ([m
[32m+[m							[32m<div className="flex flex-col gap-2 w-20 sm:w-24">[m
[32m+[m								[32m{product.images.map((image, index) => ([m
[32m+[m									[32m<button[m
[32m+[m										[32mkey={index}[m
[32m+[m										[32monClick={() => setSelectedImage(index)}[m
[32m+[m										[32mclassName={`relative aspect-square overflow-hidden rounded-lg border-2 ${[m
[32m+[m											[32mselectedImage === index[m
[32m+[m												[32m? "border-black"[m
[32m+[m												[32m: "border-gray-200"[m
[32m+[m										[32m}`}[m
[32m+[m									[32m>[m
[32m+[m										[32m<Image[m
[32m+[m											[32msrc={urlFor(image).url()}[m
[32m+[m											[32malt={`${product.title} ${[m
