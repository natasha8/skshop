[32m+[m[32m"use client";[m
[32m+[m
[32m+[m[32mimport Image from "next/image";[m
[32m+[m[32mimport Link from "next/link";[m
[32m+[m[32mimport { motion } from "framer-motion";[m
[32m+[m[32mimport { urlFor } from "@/sanity/lib/image";[m
[32m+[m
[32m+[m[32minterface ProductCardProps {[m
[32m+[m	[32mproduct: {[m
[32m+[m		[32m_id: string;[m
[32m+[m		[32mtitle: string;[m
[32m+[m		[32mslug: string;[m
[32m+[m		[32mtype: string;[m
[32m+[m		[32mimage: any;[m
[32m+[m		[32mhoverImage?: any;[m
[32m+[m		[32mprice: number;[m
[32m+[m		[32misPreorder: boolean;[m
[32m+[m		[32mvariants?: Array<{[m
[32m+[m			[32mprice: number;[m
[32m+[m			[32msize: string;[m
[32m+[m			[32mcolor: string;[m
[32m+[m			[32mstock: number;[m
[32m+[m		[32m}>;[m
[32m+[m	[32m};[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mexport default function ProductCard({ product }: ProductCardProps) {[m
[32m+[m	[32mconst lowestPrice = product.variants?.reduce([m
[32m+[m		[32m(min, variant) => (variant.price < min ? variant.price : min),[m
[32m+[m		[32mproduct.variants[0]?.price || 0[m
[32m+[m	[32m);[m
[32m+[m
[32m+[m	[32mreturn ([m
[32m+[m		[32m<motion.div[m
[32m+[m			[32minitial={{ opacity: 0, y: 20 }}[m
[32m+[m			[32manimate={{ opacity: 1, y: 0 }}[m
[32m+[m			[32mtransition={{ duration: 0.5 }}[m
[32m+[m			[32mclassName="group relative bg-white rounded overflow-hidden hover:shadow-xl transition-all duration-300"[m
[32m+[m		[32m>[m
[32m+[m			[32m<Link href={`/products/${product.slug}`}>[m
[32m+[m				[32m<div className="aspect-9/14 relative overflow-hidden">[m
[32m+[m					[32m{product.image && ([m
[32m+[m						[32m<>[m
[32m+[m							[32m<Image[m
[32m+[m								[32msrc={urlFor(product.image).url()}[m
[32m+[m								[32malt={product.title}[m
[32m+[m								[32mfill[m
[32m+[m								[32mclassName="object-contain transition-transform duration-300 group-hover:opacity-0 px-2"[m
[32m+[m								[32msizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"[m
[32m+[m								[32mpriority={false}[m
[32m+[m							[32m/>[m
[32m+[m							[32m{product.hoverImage && ([m
[32m+[m								[32m<Image[m
[32m+[m									[32msrc={urlFor(product.hoverImage).url()}[m
[32m+[m									[32malt={`${product.title} hover`}[m
[32m+[m									[32mfill[m
[32m+[m									[32mclassName="object-contain opacity-0 transition-opacity duration-300 group-hover:opacity-100 px-2"[m
[32m+[m									[32msizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw"[m
[32m+[m									[32mpriority={false}[m
[32m+[m								[32m/>[m
[32m+[m							[32m)}[m
[32m+[m						[32m</>[m
[32m+[m					[32m)}[m
[32m+[m					[32m{product.isPreorder && ([m
[32m+[m						[32m<div className="absolute top-2 left-2 bg-orange-500 text-white px-2 py-1 rounded-full text-xs font-medium">[m
[32m+[m							[32mPre-order[m
[32m+[m						[32m</div>[m
[32m+[m					[32m)}[m
[32m+[m				[32m</div>[m
[32m+[m
[32m+[m				[32m<div className="p-4">[m
[32m+[m					[32m<h3 className="font-semibold text-gray-900 group-hover:text-black transition-colors text-lg uppercase">[m
[32m+[m						[32m{product.title}[m
[32m+[m					[32m</h3>[m
[32m+[m					[32m<div className="flex items-center justify-between">[m
[32m+[m						[32m<p className="text-sm text-gray-500 capitalize ">[m
[32m+[m							[32m{product.type}[m
[32m+[m						[32m</p>[m
[32m+[m						[32m<p className="text-sm text-black capitalize">[m
[32m+[m							[32mâ‚¬{product.price}[m
[32m+[m						[32m</p>[m
[32m+[m					[32m</div>[m
[32m+[m					[32m{lowestPrice && ([m
[32m+[m						[32m<p className="text-lg font-bold text-gray-900 mt-2">[m
[32m+[m							[32m<span className="text-sm text-gray-500 capitalize">[m
[32m+[m								[32m{" "}[m
[32m+[m								[32m/ {lowestPrice.toFixed(2)}[m
[32m+[m							[32m</span>[m
[32m+[m						[32m</p>[m
[32m+[m					[32m)}[m
[32m+[m				[32m</div>[m
[32m+[m			[32m</Link>[m
[32m+[m		[32m</motion.div>[m
[32m+[m	[32m);[m
[32m+[m[32m}[m
