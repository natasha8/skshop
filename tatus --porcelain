[32m+[m[32m"use client";[m
[32m+[m
[32m+[m[32mimport { useEffect, useState } from "react";[m
[32m+[m[32mimport { motion } from "framer-motion";[m
[32m+[m
[32m+[m[32mimport { sanityClient } from "@/lib/sanity.client";[m
[32m+[m[32mimport { PRODUCTS_QUERY } from "@/lib/sanity.queries";[m
[32m+[m[32mimport ProductCard from "./ProductCard";[m
[32m+[m[32mimport LoadingSpinner from "./LoadingSpinner";[m
[32m+[m
[32m+[m[32minterface Product {[m
[32m+[m	[32m_id: string;[m
[32m+[m	[32mtitle: string;[m
[32m+[m	[32mslug: string;[m
[32m+[m	[32mtype: string;[m
[32m+[m	[32mimage: any;[m
[32m+[m	[32mhoverImage?: any;[m
[32m+[m	[32mprice: number;[m
[32m+[m	[32misPreorder: boolean;[m
[32m+[m	[32mvariants?: Array<{[m
[32m+[m		[32mprice: number;[m
[32m+[m		[32msize: string;[m
[32m+[m		[32mcolor: string;[m
[32m+[m		[32mstock: number;[m
[32m+[m	[32m}>;[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mexport default function ProductGallery() {[m
[32m+[m	[32mconst [products, setProducts] = useState<Product[]>([]);[m
[32m+[m	[32mconst [loading, setLoading] = useState(true);[m
[32m+[m	[32mconst [error, setError] = useState<string | null>(null);[m
[32m+[m
[32m+[m	[32museEffect(() => {[m
[32m+[m		[32mconst fetchProducts = async () => {[m
[32m+[m			[32mtry {[m
[32m+[m				[32msetLoading(true);[m
[32m+[m				[32mconst data = await sanityClient.fetch(PRODUCTS_QUERY);[m
[32m+[m				[32msetProducts(data);[m
[32m+[m			[32m} catch (err) {[m
[32m+[m				[32mconsole.error("Error fetching products:", err);[m
[32m+[m				[32msetError("Failed to load products");[m
[32m+[m			[32m} finally {[m
[32m+[m				[32msetLoading(false);[m
[32m+[m			[32m}[m
[32m+[m		[32m};[m
[32m+[m
[32m+[m		[32mfetchProducts();[m
[32m+[m	[32m}, []);[m
[32m+[m
[32m+[m	[32mif (loading) {[m
[32m+[m		[32mreturn ([m
[32m+[m			[32m<div className="min-h-[400px] grid place-items-center">[m
[32m+[m				[32m<div className="text-center">[m
[32m+[m					[32m<LoadingSpinner size="lg" />[m
[32m+[m					[32m<p className="text-gray-600 mt-4">Loading products...</p>[m
[32m+[m				[32m</div>[m
[32m+[m			[32m</div>[m
[32m+[m		[32m);[m
[32m+[m	[32m}[m
[32m+[m
[32m+[m	[32mif (error) {[m
[32m+[m		[32mreturn ([m
[32m+[m			[32m<div className="min-h-[400px] grid place-items-center">[m
[32m+[m				[32m<div className="text-center text-red-600">[m
[32m+[m					[32m<p>{error}</p>[m
[32m+[m					[32m<button[m
[32m+[m						[32monClick={() => window.location.reload()}[m
[32m+[m						[32mclassName="mt-4 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"[m
[32m+[m					[32m>[m
[32m+[m						[32mTry Again[m
[32m+[m					[32m</button>[m
[32m+[m				[32m</div>[m
[32m+[m			[32m</div>[m
[32m+[m		[32m);[m
[32m+[m	[32m}[m
[32m+[m
[32m+[m	[32mif (products.length === 0) {[m
[32m+[m		[32mreturn ([m
[32m+[m			[32m<div className="min-h-[400px] grid place-items-center">[m
[32m+[m				[32m<div className="text-center text-gray-600">[m
[32m+[m					[32m<p>No products found</p>[m
[32m+[m				[32m</div>[m
[32m+[m			[32m</div>[m
[32m+[m		[32m);[m
[32m+[m	[32m}[m
[32m+[m
[32m+[m	[32mreturn ([m
[32m+[m		[32m<div className="w-full">[m
[32m+[m			[32m<motion.div[m
[32m+[m				[32minitial={{ opacity: 0 }}[m
[32m+[m				[32manimate={{ opacity: 1 }}[m
[32m+[m				[32mtransition={{ duration: 0.5, delay: 0.2 }}[m
[32m+[m				[32mclassName="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"[m
[32m+[m			[32m>[m
[32m+[m				[32m{products.map((product, index) => ([m
[32m+[m					[32m<motion.div[m
[32m+[m						[32mkey={product._id}[m
[32m+[m						[32minitial={{ opacity: 0, y: 20 }}[m
[32m+[m						[32manimate={{ opacity: 1, y: 0 }}[m
[32m+[m						[32mtransition={{ duration: 0.5, delay: index * 0.1 }}[m
[32m+[m					[32m>[m
[32m+[m						[32m<ProductCard product={product} />[m
[32m+[m					[32m</motion.div>[m
[32m+[m				[32m))}[m
[32m+[m			[32m</motion.div>[m
[32m+[m		[32m</div>[m
[32m+[m	[32m);[m
[32m+[m[32m}[m
